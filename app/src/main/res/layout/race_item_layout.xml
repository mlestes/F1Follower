<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/grey"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="2dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/race_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Name of GP"
            android:fontFamily="@font/anton_regular"
            android:textSize="32sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:layout_marginHorizontal="@dimen/std_dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/circuit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="WeatherTech Leguna Seca"
            android:fontFamily="@font/anton_regular"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="@dimen/std_dp"
            android:layout_marginBottom="@dimen/std_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/race_name_text"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="May 10, 2021"
            android:fontFamily="@font/anton_regular"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_margin="@dimen/std_dp"
            app:layout_constraintStart_toEndOf="@id/circuit_text"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>